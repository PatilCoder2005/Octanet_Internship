import java.util.ArrayList;
import java.util.List;
import java.util.Scanner;

public class ATMSimulator
{
    private double balance;
    private String pin;
    private List<String> transactionHistory;

    public ATMSimulator() 
{
        this.balance = 0.0; 
        this.transactionHistory = new ArrayList<>(); 

    }

    public void setPin(String pin) 
{
        this.pin = pin; 

        transactionHistory.add("PIN set.");

    }

    public void deposit(double amount) 
{
        balance += amount; 

        transactionHistory.add("Deposited: $" + amount); 

        System.out.println("Amount deposited successfully: $" + amount); 

    }

    public void withdraw(double amount) 
{
        if (amount <= balance)
{ 

            balance -= amount;

            transactionHistory.add("Withdrew: $" + amount); 

            System.out.println("Amount withdrawn successfully: $" + amount); 

        } else 
{
            System.out.println("Insufficient funds."); 

        }
    }

    public void changePin(String newPin) 
{
        this.pin = newPin; 

        transactionHistory.add("PIN changed."); 

    }

    public void printBalance() 
{
        System.out.println("Current balance: $" + balance);

    }

    public void printTransactionHistory() 
{
        System.out.println("Transaction History:");
        for (String transaction : transactionHistory)
{
            System.out.println(transaction); 

        }
    }

    public boolean verifyPin(String inputPin) 
{
        return pin.equals(inputPin); 

    }

    public static void main(String[] args) 
{
        Scanner scanner = new Scanner(System.in);
        ATMSimulator atm = new ATMSimulator(); 


        System.out.println("Set your PIN:");
        String initialPin = scanner.nextLine();
        atm.setPin(initialPin); 


        while (true)
{
            System.out.println("Enter your PIN:");
            String inputPin = scanner.nextLine();

            if (!atm.verifyPin(inputPin)) 
{
                System.out.println("Incorrect PIN. Try again.");
                continue; 

            }

            while (true) 
{
                System.out.println("1. Deposit\n2. Withdraw\n3. Check Balance\n4. Change PIN\n5. Transaction History\n6. Exit");
                int choice = scanner.nextInt();
                scanner.nextLine(); 


                switch (choice) 
{
                    case 1:
                        System.out.println("Enter amount to deposit:");
                        double depositAmount = scanner.nextDouble();
                        atm.deposit(depositAmount); 

                        break;
                    case 2:
                        System.out.println("Enter amount to withdraw:");
                        double withdrawAmount = scanner.nextDouble();
                        atm.withdraw(withdrawAmount); 

                        break;
                    case 3:
                        atm.printBalance(); 
                        break;
                    case 4:
                        System.out.println("Enter new PIN:");
                        String newPin = scanner.nextLine();
                        atm.changePin(newPin); 
                        break;
                    case 5:
                        atm.printTransactionHistory();
                        break;
                    case 6:
                        System.out.println("Exiting...");
                        scanner.close();
                        return; 
                    default:
                        System.out.println("Invalid choice. Try again.");
                }
            }
        }
    }
}
